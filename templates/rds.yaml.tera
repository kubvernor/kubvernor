version_info: "0"
resources:{% for route in routes %}
- "@type": type.googleapis.com/envoy.config.route.v3.RouteConfiguration
  name: {{route.name}}
  virtual_hosts:
  - name: backend
    domains:
    - "*"
    routes:      
      - match:
          prefix: "/hello"
        direct_response:                          
          status: 200
          body:
            inline_string: "Hello from {{route.name}} Envoy Gateway proudly deployed by Kubvernor"{% endfor %}